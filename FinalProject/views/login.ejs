<% include partials/header%>
<div class="container-login"> 
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="main main-login main-center mn-login" align="center">
			<div class="panel-heading">
				<h1 class="title text-center">Login</h1>
				<hr/>
			</div>
			<form class="form-horizontal" method="post" action="/login">
				<div class="form-group">
					<label for="name" class="control-label">Username </label>
					<div class="input-group col-xs-6">
						<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
						<input type="text" class="form-control" name="username" id="username"  placeholder="Enter your Username" required/>
					</div>
				</div>
				<div class="form-group">
					<label for="password" class="control-label">Password </label>
					<div class="input-group col-xs-6">
						<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
						<input type="password" class="form-control" name="password" id="password"  placeholder="Enter your Password" required/>
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-lg login-button">Login</button>
				</div>
				<div class="login-register">
					<p>Don't have account yet ? <a href="/register">Register</a></p>
					<p>Forgot Password ? <a href="/forgot">Click Here</a></p>
				</div>
			</form>
		</div>
	</div>
</div>
<% include partials/footer%>