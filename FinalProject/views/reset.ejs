<% include partials/header%>
<div class="container-reset">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="main main-login main-center" align="center">
			<div class="panel-heading">
				<h1 class="title text-center">Reset Password</h1>
				<hr/>
			</div>
			<form action="/reset/<%= token %>" method="POST">
				<div class="form-group">
					<label for="password" class="control-label">New Password</label>
					<div class="input-group col-xs-6">
						<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
						<input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
					</div>
				</div>
				<div class="form-group">
					<label for="confirm" class="control-label">Confirm Password</label>
					<div class="input-group col-xs-6">
						<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
						<input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-md reset-button">Change Password</button>
				</div>
				<div class="form-group">
					<a href="/login">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>
<% include partials/footer%>